{
  "id": null,
  "uid": null,
  "title": "Distributed Storage Metrics",
  "tags": ["distributed-storage", "prometheus"],
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "5s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Request Rate (req/sec)",
      "type": "graph",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total[1m])) by (server_id)",
          "legendFormat": "{{server_id}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "short",
          "label": "Requests/sec",
          "logBase": 1,
          "min": 0,
          "show": true
        },
        {
          "format": "short",
          "show": true
        }
      ],
      "legend": {
        "show": true,
        "values": false,
        "current": false,
        "max": false,
        "min": false,
        "avg": false,
        "total": false
      }
    },
    {
      "id": 2,
      "title": "Response Time 95th Percentile",
      "type": "graph",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[1m])) by (le, server_id))",
          "legendFormat": "{{server_id}} - 95th percentile",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "s",
          "label": "Seconds",
          "logBase": 1,
          "min": 0,
          "show": true
        },
        {
          "format": "short",
          "show": true
        }
      ]
    },
    {
      "id": 3,
      "title": "Error Rate",
      "type": "graph",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "sum(rate(http_errors_total[1m])) by (server_id)",
          "legendFormat": "{{server_id}} errors",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "short",
          "label": "Errors/sec",
          "logBase": 1,
          "min": 0,
          "show": true
        },
        {
          "format": "short",
          "show": true
        }
      ]
    },
    {
      "id": 4,
      "title": "Node Health Status",
      "type": "stat",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "targets": [
        {
          "expr": "node_availability",
          "legendFormat": "{{node_id}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "min": 0,
          "max": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "green", "value": 1 }
            ]
          },
          "color": {
            "mode": "thresholds"
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": {
          "calcs": ["last"],
          "fields": "",
          "values": false
        },
        "orientation": "auto",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto"
      }
    },
    {
      "id": 5,
      "title": "CPU Usage by Server",
      "type": "graph",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
      "targets": [
        {
          "expr": "rate(process_cpu_seconds_total[1m]) * 100",
          "legendFormat": "{{instance}} CPU %",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "percent",
          "label": "CPU Usage %",
          "logBase": 1,
          "min": 0,
          "max": 100,
          "show": true
        },
        {
          "format": "short",
          "show": true
        }
      ]
    },
    {
      "id": 6,
      "title": "Memory Usage by Server",
      "type": "graph",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
      "targets": [
        {
          "expr": "process_resident_memory_bytes / 1024 / 1024",
          "legendFormat": "{{instance}} Memory (MB)",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "bytes",
          "label": "Memory Usage",
          "logBase": 1,
          "min": 0,
          "show": true
        },
        {
          "format": "short",
          "show": true
        }
      ]
    },
    {
      "id": 7,
      "title": "Request Rate by Endpoint",
      "type": "graph",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 24 },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total[1m])) by (endpoint)",
          "legendFormat": "{{endpoint}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "short",
          "label": "Requests/sec",
          "logBase": 1,
          "min": 0,
          "show": true
        },
        {
          "format": "short",
          "show": true
        }
      ]
    },
    {
      "id": 8,
      "title": "Response Time by Endpoint",
      "type": "graph",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 24 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[1m])) by (le, endpoint))",
          "legendFormat": "{{endpoint}} - 95th percentile",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "s",
          "label": "Response Time (seconds)",
          "logBase": 1,
          "min": 0,
          "show": true
        },
        {
          "format": "short",
          "show": true
        }
      ]
    },
    {
      "id": 9,
      "title": "Active Connections",
      "type": "graph",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 32 },
      "targets": [
        {
          "expr": "active_connections",
          "legendFormat": "{{server_id}} connections",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "short",
          "label": "Active Connections",
          "logBase": 1,
          "min": 0,
          "show": true
        },
        {
          "format": "short",
          "show": true
        }
      ]
    },
    {
      "id": 10,
      "title": "Storage Usage",
      "type": "graph",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 32 },
      "targets": [
        {
          "expr": "storage_used_bytes / 1024 / 1024 / 1024",
          "legendFormat": "{{server_id}} Storage (GB)",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "bytes",
          "label": "Storage Used (GB)",
          "logBase": 1,
          "min": 0,
          "show": true
        },
        {
          "format": "short",
          "show": true
        }
      ]
    },
    {
      "id": 11,
      "title": "Request Status Codes",
      "type": "graph",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 40 },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total[1m])) by (status_code)",
          "legendFormat": "Status {{status_code}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "short",
          "label": "Requests/sec",
          "logBase": 1,
          "min": 0,
          "show": true
        },
        {
          "format": "short",
          "show": true
        }
      ]
    }
  ]
}
